@model List<Market.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_ClientLayout";
}
    <form class="form-control form-control-lg" asp-controller="Home" method = "post" asp-action="Products">
        <h3>Category
        <select name="Id">
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <input type="submit" value="View">
    </form></h3>
<table class="table table-striped table-inverse">
    <tr class="text-center">
        <th colspan="5">List of products</th>
    </tr>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Cost</td>
        <td>Category</td>
        <td></td>
    </tr>
    @if(Model.Count > 0){
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Cost</td>
                <td>@item.CategoryId</td>
                <td><a class = "btn btn-success" asp-controller = "Home" method = "post" asp-action = "Trash" asp-route-Id = "@item.Id">Buy</a></td>          
            </tr>
        }
    }else{
    <tr class="text-center">
        <th colspan="5">Empty</th>
    </tr>        
    }
</table>