@model List<Market.Models.Product>

@{
    ViewData["Title"] = "Product's category";
    Layout = "_AdminLayout";
}
    <form class="form-control form-control-lg" asp-controller="Admin" method = "post" asp-action="Categories">
        <h3>Category</h3>
        <select name="Id">
            @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <input type="submit" value="View">
    </form>
<table class="table table-striped table-inverse">
    <tr class="text-center">
        <th colspan="5">List of products</th>
    </tr>
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Cost</td>
        <td>Category</td>
    </tr>
    @if(Model.Count > 0){
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Cost</td>
            <td>@item.CategoryId</td>          
        </tr>        
        }
    }else{
    <tr class="text-center">
        <th colspan="5">Empty</th>
    </tr>        
    }
</table>